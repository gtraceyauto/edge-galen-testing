@objects
  header-container     css    .header-container
  header               css    .header
  team_name-*          css    .full-team-name.hide-for-small-only

= Header =
  header:
    text is "MLB Standings"
    centered horizontally inside header-container

= Teams =
  @forEach [team_name-*] as item, prev as previousItem
      @if ${isVisible(item)}
          ${item}:
              aligned vertically left ${previousItem}
